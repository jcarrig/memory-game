@import 'nib'

html
  height 100%
  padding 0
  body 0
  background-color lighten(#00B7FF, 20)
body
  height 100%
  padding 0
  margin 0
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background linear-gradient(top, #FFFFFF, lighten(#00B7FF, 20))
#container
  min-height 100%
  position relative
header
  h1
    padding 0 50px
    display inline-block
  p
    display inline-block
#main
  padding-bottom 60px
a
  color: #00B7FF
div.large
  width 850px
  margin 0 auto
  padding 25px
  div
    display inline-block
  div.form-input
    width 600px
    padding 15px  
  div.form-button
    vertical-align top
    padding 15px
  input
    width 550px
    padding 10px
    font-size 24px
    border-radius 10px
    border 1px solid #00B7FF
  input:focus
    box-shadow: 0px 0px 5px #00B7FF
  label
    width 550px
    font-size 11px
    margin 5px 0 0 5px
    display inline-block 
  button
    background #66D4FF
    border-top 1px solid #38538c
    border-right 1px solid #1f2d4d
    border-bottom 1px solid #151e33
    border-left 1px solid #1f2d4d
    border-radius 4px
    box-shadow inset 0 1px 10px 1px #5c8bee, 0px 1px 0 #1d2c4d, 0 6px 0px #1f3053, 0 8px 4px 1px #111111
    color #fff
    font bold 20px "helvetica neue", helvetica, arial, sans-serif
    line-height 1
    margin-top 0
    margin-bottom 10px
    padding 10px 0 12px 0
    text-align center
    text-shadow 0px -1px 1px #1e2d4d
    width 150px
    -webkit-background-clip padding-box
  button:hover
    box-shadow inset 0 0px 20px 1px #87adff, 0px 1px 0 #1d2c4d, 0 6px 0px #1f3053, 0 8px 4px 1px #111111
    cursor pointer
  button:active
    box-shadow inset 0 1px 10px 1px #5c8bee, 0 1px 0 #1d2c4d, 0 2px 0 #1f3053, 0 4px 3px 0 #111111
    margin-top 8px
#game
  padding 0 35px
  width 850px
  margin 0 auto
div.card
  width 150px
  height 150px
  border 1px solid #00B7FF
  border-right 1px solid darken(#00B7FF, 10)
  border-bottom 1px solid darken(#00B7FF, 20)
  border-radius 5px
  display inline-block
  margin 15px
  padding 15px
  vertical-align top
  background-color #fff
  a
    display inline-block
    width 150px
    height 150px
#messages
  width 100%
  fixed top left
  height 60px
  .status
    text-align center
    padding 15px
  .green
    background-color #ccffcc
    color #00cc00
  .red
    background-color #ffcccc
    color #ff3333
footer
  position absolute
  bottom 0
  height 60px
  left 0
  right 0
  text-align center
  p
    font-size 12px
    color #555
    a
      color #555


